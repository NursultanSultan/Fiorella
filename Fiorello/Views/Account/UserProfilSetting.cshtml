@using Fiorello.ViewModel.UserProfile
@model UserProfileVM
@{ Layout = null; }
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <!--  This file has been downloaded from bootdey.com bootdey on twitter -->
    <!--  All snippets are MIT license http://bootdey.com/license -->
    <title>profile edit data and skills - Bootdey.com</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container">
        <div class="main-body">
            <div class="row">
                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                                <div class="mt-3">
                                    <h4>@Model.Username</h4>
                                    <p class="text-secondary mb-1">Full Stack Developer</p>
                                    <p class="text-muted font-size-sm">Baku</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card mt-3">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-globe mr-2 icon-inline"><circle cx="12" cy="12" r="10"></circle><line x1="2" y1="12" x2="22" y2="12"></line><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path></svg>Website</h6>
                                <span class="text-secondary"><a class="btn btn-primary" asp-area="Default" asp-controller="Home" asp-action="Index">Go To Website</a></span>
                            </li>

                            

                        </ul>
                    </div>
                </div>


                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <form method="post">
                                <div class="form-group">
                                    <label>Fullname</label>
                                    <input asp-for="Fullname" class="form-control p_input">
                                    <span asp-validation-for="Fullname" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label>Password</label>
                                    <input asp-for="Username" class="form-control p_input">
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>
                                
                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary btn-block enter-btn">Save Changes</button>
                                </div>
                            </form>

                        </div>
                    </div>



                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="d-flex align-items-center mb-3">Profile Settings</h5>

                                    <div class="row">
                                        <div class="col-lg-4 col-md-6 mb-5">
                                            <div class="card mt-3">
                                                <ul class="list-group">
                                                    <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">


                                                        <h6 class="mb-0"><i class="bi bi-key-fill"></i> Password </h6>
                                                        <div ><span class="text-secondary"><a class="btn btn-primary text-white">Change </a></span></div>


                                                    </li>


                                                </ul>
                                            </div>




                                        </div>

                                       

                                    </div>


                                </div>
                            </div>
                        </div>
                    </div>
                </div>







            </div>
        </div>
    </div>

    <style type="text/css">
        body {
            background: #f7f7ff;
            margin-top: 20px;
        }

        .card {
            position: relative;
            display: flex;
            flex-direction: column;
            min-width: 0;
            word-wrap: break-word;
            background-color: #fff;
            background-clip: border-box;
            border: 0 solid transparent;
            border-radius: .25rem;
            margin-bottom: 1.5rem;
            box-shadow: 0 2px 6px 0 rgb(218 218 253 / 65%), 0 2px 6px 0 rgb(206 206 238 / 54%);
        }

        .me-2 {
            margin-right: .5rem !important;
        }
    </style>

    <script type="text/javascript">

    </script>

    <script src="https://kit.fontawesome.com/703d4d8784.js" crossorigin="anonymous"></script>
</body>
</html>