@model IEnumerable<Exsperts>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Exsperts</h4>


            <div class="table-responsive">
                <table class="table table-bordered mt-3">
                    <thead>
                        <tr>
                            <th> # </th>
                            <th> Image </th>
                            <th> Name </th>
                            <th> Job </th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var exp in Model)
                        {
                            <tr>
                                <td> @count </td>
                                <td> <img style="width :100px ; height : 100px " src="~/img/@exp.Image" class="img-fluid rounded-circle "  alt=""></td>
                                <td> @exp.Name </td>
                                <td> @exp.Job </td>
                                
                            </tr>
                            count++;
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


